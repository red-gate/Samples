[Unit]
Description=Pre-Shutdown Processes
DefaultDependencies=no
After=multi-user.target
Before=shutdown.target

[Service]
Type=oneshot
RemainAfterExit=true
Environment="KUBECONFIG=/home/rgadmin/.kube/config"
ExecStart=bash /home/rgadmin/graceful_shutdown.sh

[Install]
WantedBy=halt.target reboot.target shutdown.target multi-user.target